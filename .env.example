# =============================================================================
# ENVIRONMENT CONFIGURATION FOR BOOKING MONOREPO
# =============================================================================
# This file contains environment variables for both frontend and backend services.
# Backend variables use double underscores (__) to represent nested configuration.
# Copy this file to .env and fill in the actual values.

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for Cross-Origin Resource Sharing (CORS)
Cors__AllowedOrigins=http://localhost:3000,http://localhost:5000,http://localhost:5432,http://localhost:3001,http://localhost:8080


# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Used for Google authentication in the application
Google__ClientId=YOUR_GOOGLE_CLIENT_ID
Google__ClientSecret=YOUR_GOOGLE_CLIENT_SECRET

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
# AWS credentials for S3, CloudFront, and other AWS services
AWS__AccessKey=YOUR_AWS_ACCESS_KEY
AWS__SecretKey=YOUR_AWS_SECRET_KEY

# CloudFront configuration (uncomment and fill for production)
# AWS__CloudFront__PrivateKey="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_CONTENT\n-----END PRIVATE KEY-----"
# AWS__CloudFront__KeyPairId=YOUR_KEY_PAIR_ID
# AWS__CloudFront__Url=YOUR_CLOUDFRONT_URL

# =============================================================================
# USER SECRETS
# =============================================================================
# ASP.NET Core user secrets ID for development
USER_SECRETS_ID=YOUR_USER_SECRETS_ID

# =============================================================================
# KONNECT PAYMENT CONFIGURATION
# =============================================================================
# Konnect payment gateway settings
Konnect__ApiUrl=http://localhost:8080 # mock for local dev
Konnect__ApiKey=YOUR_KONNECT_API_KEY
Konnect__WalletKey=YOUR_KONNECT_WALLET_KEY
Konnect__PaymentLifespan=10 # change it to 10 for prod
Konnect__Webhook=YOUR_WEBHOOK_URL
Konnect__PayoutWebhook=YOUR_PAYOUT_WEBHOOK_URL

ASPNETCORE_ENVIRONMENT=Development

# =============================================================================
# OPENTELEMETRY CONFIGURATION
# =============================================================================
# OpenTelemetry settings for observability (uncomment for local dev)
# OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp-gateway-prod-eu-west-2.grafana.net/otlp
# OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
# OTEL_EXPORTER_OTLP_HEADERS="Authorization=Basic YOUR_AUTH_HEADER"

# =============================================================================
# NGROK CONFIGURATION
# =============================================================================
# Command to start ngrok tunnel for webhook testing
# ngrok http --domain=better-chief-mollusk.ngrok-free.app 5000

# =============================================================================
# BACKEND CONFIGURATION (from appsettings.Development.json)
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONNECTION STRINGS
# -----------------------------------------------------------------------------
ConnectionStrings__Database=Host=postgres;Port=5432;Database=clean-architecture;Username=postgres;Password=postgres;Include Error Detail=true
ConnectionStrings__Cache=booking.redis:6379

# -----------------------------------------------------------------------------
# SERILOG LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
# Logging sinks and levels
Serilog__Using__0=Serilog.Sinks.Console
Serilog__Using__1=Serilog.Sinks.Seq
Serilog__MinimumLevel__Default=Information
Serilog__MinimumLevel__Override__Microsoft=Information
Serilog__WriteTo__0__Name=Console
Serilog__WriteTo__1__Name=Seq
Serilog__WriteTo__1__Args__ServerUrl=http://seq:5341
Serilog__Enrich__0=FromLogContext
Serilog__Enrich__1=WithMachineName
Serilog__Enrich__2=WithThreadId

# -----------------------------------------------------------------------------
# JWT TOKEN CONFIGURATION
# -----------------------------------------------------------------------------
# JWT settings for authentication
Jwt__AccessToken__PublicKey="-----BEGIN PUBLIC KEY-----\\nYOUR_PUBLIC_KEY_CONTENT\\n-----END PUBLIC KEY-----"
Jwt__AccessToken__PrivateKey="-----BEGIN PRIVATE KEY-----\\nYOUR_PRIVATE_KEY_CONTENT\\n-----END PRIVATE KEY-----"
Jwt__AccessToken__Issuer=Bookini
Jwt__AccessToken__Audience=Front
Jwt__AccessToken__ExpirationInMinutes=15
Jwt__AccessToken__RefreshExpirationInDays=2
Jwt__AccessToken__MaxActiveTokensPerUser=5

# -----------------------------------------------------------------------------
# GOOGLE SERVICE CONFIGURATION (Backend)
# -----------------------------------------------------------------------------
# Additional Google settings for backend
Google__ClientId=YOUR_GOOGLE_CLIENT_ID
Google__ClientSecret=YOUR_GOOGLE_CLIENT_SECRET

# -----------------------------------------------------------------------------
# AWS SERVICE CONFIGURATION (Backend)
# -----------------------------------------------------------------------------
# Additional AWS settings for backend
AWS__Region=us-east-1
AWS__SecretKey=YOUR_AWS_SECRET_KEY
AWS__AccessKey=YOUR_AWS_ACCESS_KEY
AWS__S3__BucketName=YOUR_S3_BUCKET_NAME
AWS__CloudFront__Url=YOUR_CLOUDFRONT_URL
AWS__CloudFront__KeyPairId=YOUR_KEY_PAIR_ID
AWS__CloudFront__PrivateKey=YOUR_PRIVATE_KEY

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION
# -----------------------------------------------------------------------------
# Email service settings
Email__SenderEmail=YOUR_SENDER_EMAIL

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------
# Frontend-related settings used by backend
FrontEnd__BaseUrl=http://localhost:3000
FrontEnd__PasswordReset=auth/reset-password
FrontEnd__EmailVerification=auth/email-verification
FrontEnd__AppName=YOUR_APP_NAME
FrontEnd__SupportLink=https://yourdomain.com/support
FrontEnd__SecurityLink=https://yourdomain.com/report

# -----------------------------------------------------------------------------
# KONNECT PAYMENT CONFIGURATION (Backend)
# -----------------------------------------------------------------------------
# (Already defined above)

# -----------------------------------------------------------------------------
# OPENTELEMETRY CONFIGURATION (Backend)
# -----------------------------------------------------------------------------
# OpenTelemetry settings for backend observability
OpenTelemetry__OTEL_EXPORTER_OTLP_ENDPOINT=YOUR_OTLP_ENDPOINT
OpenTelemetry__OTEL_EXPORTER_OTLP_PROTOCOL=YOUR_OTLP_PROTOCOL
OpenTelemetry__OTEL_EXPORTER_OTLP_HEADERS=YOUR_OTLP_HEADERS